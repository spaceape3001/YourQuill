        void    p_dev_doodle(WebHtml& h)
        {
            Doodle   x = doodle(h);
            if(!x)
                throw HttpStatus::BadArgument;
            auto i = cdb::info(x);
            dev_title(h, x);
            auto ta = h.table();
            h.kvrow("ID") << x.id;
            h.kvrow("Name") << i.name;
            h.kvrow("Key") << i.key;
            h.kvrow("Brief") << i.brief;
            h.kvrow("Document") << dev(i.doc);
        }

        void    p_dev_doodles(WebHtml& out)
        {
            out.title("All Doodles");
            dev_table(out, all_doodles());
        }

